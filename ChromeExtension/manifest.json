{
  "manifest_version": 2,
  "name": "SourceKit for Chrome",
  "version": "0.3.0",
  "description": "Browser extension for GitHub, that enables IDE features like go to definition, or documentation on hover.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "author": "Kishikawa Katsumi",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "run_at": "document_end",
      "css": [
        "css/index.css",
        "css/style.css",
        "css/tippyjs/tippy.css",
        "css/tippyjs/light-border.css",
        "css/highlightjs/xcode.css"
      ],
      "js": ["bundle.js"]
    }
  ],
  "homepage_url": "https://github.com/kishikawakatsumi/SourceKitForSafari",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
  "web_accessible_resources": ["images/*.png"]
}
